<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="60dp"
        android:layout_marginBottom="5dp"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.2">



            <com.facebook.drawee.view.SimpleDraweeView
                xmlns:fresco = "http://schemas.android.com/apk/res-auto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                fresco:actualImageScaleType="fitXY"
                android:layout_gravity="center"
                fresco:roundedCornerRadius="5dp"
                fresco:placeholderImage="@drawable/woman2"
                fresco:placeholderImageScaleType="fitXY"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_weight="4.6">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/sourcereg"
                android:id="@+id/direct_message_sender_name"
                android:text="Damilola Akinterinwa"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginBottom="1dp"/>

            <TextView
                android:id="@+id/direct_message_sender_last_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:ellipsize="end"
                android:fontFamily="@font/sourcereg"
                android:maxLines="2"
                android:text="Also send files to yourself just select your own name from the owner fo the file then"
                android:textColor="#969595"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="15dp"
            android:layout_weight="0.3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Aug 29"
                android:id="@+id/direct_message_timestamp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:fontFamily="@font/sourcereg"
                android:textColor="#969595"
                android:textSize="16dp"/>

            <LinearLayout
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_marginTop="6dp"
                android:id="@+id/direct_message_unread_count"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/circle_unread_design">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="9+"
                    android:fontFamily="@font/larsseit"
                    android:textColor="@color/White"
                    android:textSize="15dp"/>
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="7dp"
        android:background="#DDDCDC" />
</LinearLayout>