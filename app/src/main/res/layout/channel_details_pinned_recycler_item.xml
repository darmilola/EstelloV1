<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:weightSum="4"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <ImageView
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="left"
            android:src="@drawable/pinned_icon"
            android:rotation="270"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3.5"
        android:layout_marginTop="15dp"
        android:paddingBottom="5dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="150dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Vanhack-aline of london vanhacck"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:fontFamily="@font/airsemi"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Oct 28th, 2020"
                android:textColor="@color/light_text_color"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/airreg"/>

        </LinearLayout>
        <com.deltastream.example.edittextcontroller.RTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:ellipsize="end"
            android:layout_marginRight="20dp"
            android:maxLines="3"
            android:lineSpacingExtra="6dp"
            android:layout_marginTop="5dp"
            android:text="Good morining/ afternoon @everyone Exciting news, the vanhack slack App is now available for download you can now get it on playstore just search slack App"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:fontFamily="@font/airreg"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="bottom"
            android:background="#60A5A4A4"/>


    </LinearLayout>

</LinearLayout>