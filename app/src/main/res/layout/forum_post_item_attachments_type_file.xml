<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:layout_marginTop="7dp"
    android:background="@drawable/messaging_area_image_type_background">



        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/book_2x"
            android:tint="@color/pinkypinky"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center|left"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tree63-Look-What-Youve done"
                android:maxLines="1"
                android:textSize="14dp"
                android:layout_marginRight="10dp"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:fontFamily="@font/airmed"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PDF 5MB"
                android:textSize="13dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="3dp"
                android:textColor="@color/light_text_color"
                android:fontFamily="@font/airmed"/>
        </LinearLayout>
    </LinearLayout>
