<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/transparent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        app:strokeWidth="0.5dp"
        app:strokeColor="#c8c8c8"
        android:layout_marginBottom="3dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Day 1"
                android:id="@+id/training_live_divisional_type"
                android:textColor="#c8c8c8"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Covid-19: What you need to know (CME Eligible)"
                android:textColor="@color/black"
                android:maxLines="3"
                android:id="@+id/training_live_session_title"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="duration:"
                    android:id="@+id/training_live_duration_title"
                    android:layout_marginRight="20dp"
                    android:textColor="#c8c8c8"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="30 minutes"
                    android:id="@+id/training_live_duration_value"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="class id:"
                    android:id="@+id/training_live_class_id_title"
                    android:layout_marginRight="20dp"
                    android:textColor="#c8c8c8"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="CTR-205789"
                    android:textColor="@color/black"
                    android:id="@+id/training_live_class_id_value"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="password:"
                    android:layout_marginRight="20dp"
                    android:textColor="#c8c8c8"
                    android:id="@+id/training_live_password_title"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="CTR-205104"
                    android:id="@+id/training_live_password_value"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/training_live_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Instructor is yet to open session"
                android:textColor="#F31D1D"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">


                <com.google.android.material.button.MaterialButton
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:text="Join Class"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:id="@+id/training_live_join_class"
                    android:layout_marginTop="5dp"
                    android:textAllCaps="false"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:text="Open Class"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:id="@+id/training_live_open_class"
                    android:layout_marginTop="5dp"
                    android:textAllCaps="false"/>

            </LinearLayout>





        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
