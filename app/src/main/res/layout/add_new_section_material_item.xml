<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:paddingTop="3dp"
    android:paddingBottom="2dp"
    android:background="@color/light_primary"
    android:weightSum="6">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:id="@+id/create_section_add_or_edit_material_item_image"
        android:src="@drawable/course_video_icon"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="4"
        android:id="@+id/create_section_add_or_edit_material_item_title"
        android:fontFamily="@font/latoreg"
        android:text="This is my vdddhdhd dgdgdnew material for our.mp4"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:id="@+id/create_section_add_or_edit_material_item_delete"
        android:tint="@color/pinkypinky"
        android:src="@drawable/ic_close"/>


</LinearLayout>