<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:padding="5dp">

  <com.google.android.material.card.MaterialCardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="3dp"
      android:layout_marginRight="3dp"
      app:strokeColor="@color/grey"
      app:strokeWidth="0.5dp"
      app:cardElevation="1dp"
      app:cardCornerRadius="5dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/forum_post_item_attachments_video_frame">

      <com.airbnb.lottie.LottieAnimationView
          android:id="@+id/attachment_video_loader_view"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:elevation="2dp"
          android:background="#50000000"
          android:visibility="gone"
          app:lottie_rawRes="@raw/circleloader"
          app:lottie_autoPlay="true"
          app:lottie_loop="true"/>


      <com.facebook.drawee.view.SimpleDraweeView
         xmlns:fresco = "http://schemas.android.com/apk/res-auto"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          fresco:placeholderImage="@drawable/greyimage"
          fresco:actualImageScaleType="centerCrop"
          android:elevation="2dp"
          android:id="@+id/attachment_video_thumbnail"
          fresco:placeholderImageScaleType="centerCrop"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="#50000000"
          android:gravity="center"
          android:id="@+id/attachment_video_play_circle_layout"
          android:elevation="2dp">



        <LinearLayout
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:foregroundTint="@color/blue"
            android:background="@drawable/white_outline_circle">

          <ImageView
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:src="@drawable/ic_play_arrow_white_36dp"
              android:tint="#70FFFFFF" />
        </LinearLayout>

      </LinearLayout>
      <com.google.android.exoplayer2.ui.PlayerView
          android:id="@+id/player_view"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          app:resize_mode="fixed_height"
          app:surface_type="texture_view"
          app:use_controller="false"/>
    </FrameLayout>


  </com.google.android.material.card.MaterialCardView>
</LinearLayout>