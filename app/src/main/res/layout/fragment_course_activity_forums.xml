<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F3F3F3"
    tools:context=".Fragments.CourseActivityForums">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:paddingBottom="10dp">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                app:cardBackgroundColor="#009688"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="2dp">




    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:padding="5dp"
            android:src="@drawable/x_2x"
            android:tint="#FFFFFF" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/white"
            android:fontFamily="@font/opensansreg"
            android:text="Use Forum to ask questions debate ideas and find classmates who share goals"/>
    </FrameLayout>
            </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:id="@+id/qandaforumcard"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="50dp"
                android:layout_alignParentLeft="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:fontFamily="@font/opensansbold"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Q and A Forum"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_text_color"
                    android:textSize="13dp"
                    android:fontFamily="@font/opensansreg"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="7dp"
                    android:text="Use this forum to get answers to questions that may arise from any part of the course."/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="30dp"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:tint="@color/dark_text_color"
                    android:src="@drawable/right_arrow_2_2x" />
            </LinearLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="50dp"
                android:layout_alignParentLeft="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:fontFamily="@font/opensansbold"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="General Discussion"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_text_color"
                    android:textSize="13dp"
                    android:fontFamily="@font/opensansreg"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="7dp"
                    android:text="Use this forum to disucss things related to the course but don't belong to other forums"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="30dp"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:tint="@color/dark_text_color"
                    android:src="@drawable/right_arrow_2_2x" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="85dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="50dp"
                android:layout_alignParentLeft="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:fontFamily="@font/opensansbold"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Meet and Greet"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_text_color"
                    android:textSize="13dp"
                    android:fontFamily="@font/opensansreg"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="7dp"
                    android:text="Introduce yourself and say hello to fellow classmates"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="30dp"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:tint="@color/dark_text_color"
                    android:src="@drawable/right_arrow_2_2x" />
            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>