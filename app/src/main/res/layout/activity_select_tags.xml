<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SelectSkillsActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:id="@+id/manageTagsToobar"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Manage Tags"
            android:textColor="@color/white"
            android:gravity="left|center"
            android:id="@+id/manageTagsTitle"
            android:textSize="17dp">
        </TextView>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <com.pchmn.materialchips.ChipsInput
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint="Enter Tags"
            app:chip_deletable="true"
            android:padding="10dp"
            android:id="@+id/select_tags_input"
            app:filterable_list_backgroundColor="@color/light_primary"
            app:filterable_list_textColor="@color/colorPrimary"
            android:background="@drawable/create_course_edittext_background"
            app:textColor="@color/colorPrimary"
            app:maxRows="8"
            app:showChipDetailed="false"
            app:hintColor="#c8c8c8"/>


        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Done"
            app:cornerRadius="0dp"
            android:padding="0dp"
            android:textSize="18dp"
            android:id="@+id/manageTagsDone"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>


</LinearLayout>