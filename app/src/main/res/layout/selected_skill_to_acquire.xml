<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="3dp"
    android:background="@drawable/bg_chip_view"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.robertlevonyan.views.chip.Chip
        android:id="@+id/selected_skill_chip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Programming in java"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        app:checkedIconEnabled="true"
        app:closeIconTint="@color/pinkypinky"
        app:mcv_backgroundColor="#F8DED5F5"
        app:mcv_closable="false"
        app:mcv_cornerRadius="25dp"
        app:fontFamily="@font/bookpro"
        android:fontFamily="@font/bookpro"
        app:mcv_textColor="@color/colorPrimaryDark" />
</LinearLayout>