<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".UserProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

               <ImageView
                   android:layout_width="60dp"
                   android:layout_height="60dp"
                   android:src="@drawable/woman2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/larsseitbold"
                    android:textSize="@dimen/regular_text_size"
                    android:text="Damilola Akinterinwa"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center|left"
                android:paddingLeft="20dp"
                android:background="@drawable/user_profile_view_profile_background"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/newuser"
                    android:tint="#201D1D" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center|left"
                    android:text="View profile"
                    android:fontFamily="@font/larsseitiii"
                    android:textSize="@dimen/regular_text_size"
                    android:textColor="#4E4E4E" />
            </LinearLayout>


          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:layout_marginTop="20dp"
              android:gravity="center|left"
              android:layout_marginLeft="15dp"
              android:orientation="horizontal"
              android:layout_marginRight="15dp">

              <ImageView
                  android:layout_width="20dp"
                  android:layout_height="20dp"
                  android:src="@drawable/newdownload"
                  android:tint="#201D1D" />


              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="20dp"
                  android:gravity="center|left"
                  android:text="Downloads"
                  android:fontFamily="@font/larsseitiii"
                  android:textSize="@dimen/small_regular_text_size"
                  android:textColor="@color/black" />
          </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:gravity="center|left"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:layout_marginRight="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/dollar_coin"
                    android:tint="#201D1D" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center|left"
                    android:text="Earnings"
                    android:fontFamily="@font/larsseitiii"
                    android:textSize="@dimen/small_regular_text_size"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:gravity="center|left"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:layout_marginRight="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/newverification"
                    android:tint="#201D1D" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center|left"
                    android:text="Verification"
                    android:fontFamily="@font/larsseitiii"
                    android:textSize="@dimen/small_regular_text_size"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:gravity="center|left"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:layout_marginRight="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/settings"
                    android:tint="#201D1D" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center|left"
                    android:text="Settings"
                    android:fontFamily="@font/larsseitiii"
                    android:textSize="@dimen/small_regular_text_size"
                    android:textColor="@color/black" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="15dp"
                android:background="#DFDFDF"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:gravity="center|left"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:layout_marginRight="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/newaddfriends"
                    android:tint="#201D1D" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center|left"
                    android:text="Invite a friend"
                    android:fontFamily="@font/larsseitiii"
                    android:textSize="@dimen/small_regular_text_size"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:gravity="center|left"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:layout_marginRight="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/privacy"
                    android:tint="#201D1D" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center|left"
                    android:text="Privacy Policy"
                    android:fontFamily="@font/larsseitiii"
                    android:textSize="@dimen/small_regular_text_size"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:gravity="center|left"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:layout_marginRight="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/logout"
                    android:tint="#201D1D" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center|left"
                    android:text="Logout"
                    android:fontFamily="@font/larsseitiii"
                    android:textSize="@dimen/small_regular_text_size"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>