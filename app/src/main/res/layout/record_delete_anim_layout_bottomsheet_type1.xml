<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="60dp"
    android:layout_gravity="left|bottom"
    android:background="@color/transparent"
    android:layout_height="400dp"
    android:paddingBottom="4dp"
    android:visibility="gone"
    android:layout_marginRight="10dp"
    android:id="@+id/record_delete_anim_root_type1_bottomsheet"
    android:elevation="1dp">

    <ImageView
        android:id="@+id/imageViewMic"
        android:layout_width="26dp"
        android:layout_height="24dp"
        android:elevation="2dp"
        android:layout_gravity="center|bottom"
        android:src="@drawable/new_mic_icon"
        android:tint="@color/pinkypinky"
        android:translationZ="10dp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/layoutDustin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|bottom"
        android:elevation="3dp"
        android:gravity="center|bottom"
        android:orientation="vertical"
        android:translationZ="10dp">

        <ImageView
            android:id="@+id/dustin_cover"
            android:layout_width="32dp"
            android:layout_height="4dp"
            android:layout_marginRight="8dp"
            android:tint="@color/dark_text_color"
            android:src="@drawable/dustbin_cover_ic"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/dustin"
            android:layout_width="16dp"
            android:layout_height="20dp"
            android:tint="@color/dark_text_color"
            android:src="@drawable/dustbin_wheel_ic"
            android:visibility="gone" />
    </LinearLayout>
</FrameLayout>