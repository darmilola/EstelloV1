<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layerType="hardware"
    android:fitsSystemWindows="true"
    android:background="@color/transparent"
    android:id="@+id/activity_main_drawer_layout"
    tools:context=".MainActivity">

    <include layout="@layout/activity_main_content"/>

    <com.google.android.material.navigation.NavigationView
      android:layout_width="250dp"
      android:id="@+id/activity_main_profile_nav_view"
      android:layout_height="match_parent"
      android:background="@drawable/activity_main_drawer_background"
      android:layout_gravity="end">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">


          <ScrollView
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="100dp"
                      android:layout_marginLeft="35dp"
                      android:layout_marginRight="15dp"
                      android:layout_marginTop="25dp"
                      android:orientation="horizontal">

                      <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
                          android:layout_width="90dp"
                          android:layout_height="90dp"
                          android:layout_gravity="center|bottom"
                          fresco:actualImageScaleType="fitXY"
                          fresco:placeholderImage="@drawable/woman2"
                          fresco:placeholderImageScaleType="fitXY"
                          fresco:roundAsCircle="false"
                          fresco:roundedCornerRadius="5dp" />
                  </LinearLayout>

                  <TextView
                      android:layout_width="250dp"
                      android:layout_height="match_parent"
                      android:layout_marginLeft="20dp"
                      android:fontFamily="@font/airsemi"
                      android:gravity="center|left"
                      android:layout_marginTop="10dp"
                      android:maxLines="2"
                      android:ellipsize="end"
                      android:text="Damilola Akinterinwa"
                      android:textColor="@color/black"
                      android:textSize="18dp" />


                  <LinearLayout
                      android:id="@+id/activity_main_drawer_user_profile_layout"
                      android:layout_width="200dp"
                      android:layout_height="40dp"
                      android:layout_marginLeft="25dp"
                      android:layout_marginRight="15dp"
                      android:layout_marginTop="20dp"
                      android:gravity="center|left"
                      android:orientation="horizontal">

                      <ImageView
                          android:layout_width="20dp"
                          android:layout_height="20dp"
                          android:src="@drawable/user_male_2x"
                          android:tint="#201D1D" />


                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_marginLeft="20dp"
                          android:fontFamily="@font/airreg"
                          android:gravity="center|left"
                          android:text="Profile"
                          android:textColor="@color/black"
                          android:textSize="18dp" />
                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="200dp"
                      android:layout_height="40dp"
                      android:layout_marginLeft="25dp"
                      android:layout_marginRight="15dp"
                      android:layout_marginTop="5dp"
                      android:gravity="center|left"
                      android:orientation="horizontal">

                      <ImageView
                          android:layout_width="22dp"
                          android:layout_height="23dp"
                          android:src="@drawable/download_2_2x"
                          android:tint="#201D1D" />


                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_marginLeft="20dp"
                          android:fontFamily="@font/airreg"
                          android:gravity="center|left"
                          android:text="Downloads"
                          android:textColor="@color/black"
                          android:textSize="18dp" />
                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="200dp"
                      android:layout_height="40dp"
                      android:layout_marginLeft="25dp"
                      android:layout_marginRight="15dp"
                      android:layout_marginTop="5dp"
                      android:gravity="center|left"
                      android:orientation="horizontal">

                      <ImageView
                          android:layout_width="23dp"
                          android:layout_height="25dp"
                          android:src="@drawable/newbookicon"
                          android:tint="#201D1D" />


                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_marginLeft="20dp"
                          android:fontFamily="@font/airreg"
                          android:gravity="center|left"
                          android:text="My Courses"
                          android:textColor="@color/black"
                          android:textSize="18dp" />
                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="200dp"
                      android:layout_height="40dp"
                      android:layout_marginLeft="25dp"
                      android:layout_marginRight="15dp"
                      android:layout_marginTop="5dp"
                      android:gravity="center|left"
                      android:orientation="horizontal">

                      <ImageView
                          android:layout_width="21dp"
                          android:layout_height="21dp"
                          android:src="@drawable/dollar_coin_2x"
                          android:tint="#201D1D"
                          android:padding="1dp"/>


                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_marginLeft="20dp"
                          android:fontFamily="@font/airreg"
                          android:gravity="center|left"
                          android:text="My Subscriptions"
                          android:textColor="@color/black"
                          android:textSize="18dp" />
                  </LinearLayout>

                  <View
                      android:layout_width="250dp"
                      android:layout_height="0.5dp"
                      android:layout_marginTop="10dp"
                      android:layout_marginBottom="10dp"
                      android:layout_marginLeft="20dp"
                      android:background="@color/light_grey"/>

                  <LinearLayout
                      android:layout_width="200dp"
                      android:layout_height="40dp"
                      android:layout_marginLeft="25dp"
                      android:layout_marginRight="15dp"
                      android:layout_marginTop="5dp"
                      android:gravity="center|left"
                      android:orientation="horizontal">

                      <ImageView
                          android:layout_width="20dp"
                          android:layout_height="20dp"
                          android:padding="1dp"
                          android:src="@drawable/toggles_1_2x"
                          android:tint="#201D1D" />


                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_marginLeft="20dp"
                          android:fontFamily="@font/airreg"
                          android:gravity="center|left"
                          android:text="Settings"
                          android:textColor="@color/black"
                          android:textSize="18dp" />
                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="200dp"
                      android:layout_height="40dp"
                      android:layout_marginLeft="25dp"
                      android:layout_marginRight="15dp"
                      android:layout_marginTop="5dp"
                      android:gravity="center|left"
                      android:orientation="horizontal">

                      <ImageView
                          android:layout_width="20dp"
                          android:layout_height="20dp"
                          android:src="@drawable/users_1_2x"
                          android:tint="#201D1D" />


                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_marginLeft="20dp"
                          android:fontFamily="@font/airreg"
                          android:gravity="center|left"
                          android:text="Invite a friend"
                          android:textColor="@color/black"
                          android:textSize="18dp" />
                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="200dp"
                      android:layout_height="40dp"
                      android:layout_marginLeft="25dp"
                      android:layout_marginRight="15dp"
                      android:layout_marginTop="5dp"
                      android:gravity="center|left"
                      android:orientation="horizontal">

                      <ImageView
                          android:layout_width="20dp"
                          android:layout_height="20dp"
                          android:src="@drawable/info_2x"
                          android:tint="#201D1D" />


                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_marginLeft="20dp"
                          android:fontFamily="@font/airreg"
                          android:gravity="center|left"
                          android:text="Help"
                          android:textColor="@color/black"
                          android:textSize="18dp" />
                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="200dp"
                      android:layout_height="40dp"
                      android:layout_marginLeft="25dp"
                      android:layout_marginRight="15dp"
                      android:layout_marginTop="5dp"
                      android:gravity="center|left"
                      android:orientation="horizontal">

                      <ImageView
                          android:layout_width="20dp"
                          android:layout_height="20dp"
                          android:src="@drawable/exit_1_2x"
                          android:tint="#201D1D" />


                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_marginLeft="20dp"
                          android:fontFamily="@font/airreg"
                          android:gravity="center|left"
                          android:text="Logout"
                          android:textColor="@color/black"
                          android:textSize="18dp" />
                  </LinearLayout>
              </LinearLayout>

          </ScrollView>
      </LinearLayout>
  </com.google.android.material.navigation.NavigationView>





</androidx.drawerlayout.widget.DrawerLayout>