<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    tools:context=".CreateNewChannel">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="2dp">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:contentInsetStart="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetLeft="0dp"
        android:id="@+id/create_new_channel_toolbar"
        android:background="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:fontFamily="@font/airreg"
            android:text="Create New Channel"
            android:layout_marginLeft="20dp"
            android:gravity="center|left"/>
    </androidx.appcompat.widget.Toolbar>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.stepstone.stepper.StepperLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:ms_stepperType="progress_bar"
            app:ms_activeStepColor="@color/pinkypinky"
            app:ms_backButtonBackground="@color/transparent"
            app:ms_nextButtonColor="@color/colorPrimary"
            app:ms_bottomNavigationBackground="@color/white"
            app:ms_backButtonColor="@color/colorPrimary"
            app:ms_showBackButtonOnFirstStep="false"
            style="@style/StepperLayoutStyle"
            android:id="@+id/create_new_channel_stepper_layout"/>
    </RelativeLayout>
</LinearLayout>