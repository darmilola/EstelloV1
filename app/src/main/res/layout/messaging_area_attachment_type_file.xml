<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="220dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:layout_height="70dp">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/messaging_area_image_type_background"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/book_2x"
            android:tint="@color/pinkypinky"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center|left"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tree63-Look-What-Youve done"
                android:maxLines="1"
                android:textSize="14dp"
                android:layout_marginRight="10dp"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:fontFamily="@font/opensanssemibold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PDF"
                android:textSize="13dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/light_text_color"
                android:fontFamily="@font/opensanssemibold"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:background="@drawable/messaging_area_file_remove">


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="1dp"
            android:src="@drawable/cancel_action"/>
    </LinearLayout>

</FrameLayout>