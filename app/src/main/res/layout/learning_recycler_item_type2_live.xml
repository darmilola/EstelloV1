<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="270dp"
    android:gravity="center"
    android:layout_height="280dp">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="260dp"
        android:layout_height="260dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/white"
        android:background="@color/white"
        app:cardCornerRadius="7dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                android:id="@+id/explore_courses_image"
                android:src="@drawable/ucasdeadline"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#F7F7F7"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/man" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/airbold"
                        android:maxLines="1"
                        android:text="Toshendra Sharma"
                        android:textColor="@color/black"
                        android:textSize="11dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/airsemi"
                        android:maxLines="1"
                        android:text="CEO @RecordKeeper"
                        android:textColor="@color/dark_text_color"
                        android:textSize="10dp" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:id="@+id/explore_courses_title"
                android:ellipsize="end"
                android:maxLines="3"
                android:lineSpacingExtra="5dp"
                android:fontFamily="@font/airbold"
                android:textSize="18dp"
                android:text="Android Reversing and Malware Analysis for software"/>
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>
</LinearLayout>