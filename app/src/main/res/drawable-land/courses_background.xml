<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:width="1500dp" android:height="3000dp">
        <shape android:shape="rectangle"  >
            <solid
                android:color="@color/colorPrimary">
            </solid>
        </shape>
    </item>


    <item
        android:top="1500dp" android:right="500dp">
        <rotate android:fromDegrees="20"  android:pivotX="10" android:pivotY="-10">
            <bitmap android:src="@drawable/beautifullady"
                android:gravity="center"
                android:tint="#F8F8F8"
                android:filter="true">

            </bitmap>
        </rotate>
    </item>


</layer-list>