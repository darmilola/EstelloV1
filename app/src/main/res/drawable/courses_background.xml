<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:width="1000dp" android:height="3000dp">
        <shape android:shape="rectangle"  >

            <gradient

                android:startColor="#FFD24FE7"
                android:centerColor="#660C77"
                android:endColor="@color/colorPrimary">

            </gradient>
        </shape>
    </item>


    <item
        android:top="1500dp" android:right="500dp">
        <rotate android:fromDegrees="30"  android:pivotX="10" android:pivotY="-10">
            <bitmap android:src="@drawable/beautifullady"
                android:gravity="center"
                android:tint="#FFECECEC"
                android:filter="true">

            </bitmap>
        </rotate>
    </item>


</layer-list>