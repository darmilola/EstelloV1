<?xml version="1.0" encoding="utf-8"?>
<layer-list  xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:height="50dp" android:width="200dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_text_color"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <item android:gravity="center" android:height="10dp" android:width="30dp" android:top="27dp" android:left="120dp">
        <bitmap android:src="@drawable/triangle"
            android:gravity="center"
            android:tint="@color/dark_text_color"
            android:filter="true">

        </bitmap>
    </item>



</layer-list>